@{
    List<HarrisZhang.Repository.Entity.PostsEntity> entityList = ViewBag.PostsList as List<HarrisZhang.Repository.Entity.PostsEntity>;
}

@section scripts{
    <script>
        $(function () {
            var mySwiper = new Swiper('.swiper-container', {
                autoplay: true,
                loop: true,
                speed: 2000,

                // 如果需要分页器
                pagination: {
                    el: '.swiper-pagination',
                }
            })
        });
    </script>
}

<div class="main-content index-page">

    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide">
                <img src="~/images/unslider/shop.jpg" />
            </div>
            <div class="swiper-slide">
                <img src="~/images/unslider/subway.jpg" />
            </div>
            <div class="swiper-slide">
                <img src="~/images/unslider/sunset.jpg" />
            </div>
            <div class="swiper-slide">
                <img src="~/images/unslider/wood.jpg" />
            </div>
        </div>
        <!-- 如果需要分页器 -->
        <div class="swiper-pagination"></div>
    </div>

    @if (entityList != null)
    {
        <div class="post-item-list">
            @foreach (var item in entityList)
            {
                <div class="post-item">
                    <div class="post-list-item-container">

                        <div class="item-thumb bg-deepgrey">
                            <img src="/post-images/1.jpg" />
                        </div>

                        <a href="~/post/@item.Ename">
                            <div class="item-desc">
                                <p>@item.Summary</p>
                            </div>
                        </a>
                        <div class="item-slant reverse-slant bg-purple"></div>
                        <div class="item-slant"></div>
                        <div class="item-label">
                            <div class="item-title"><a href="~/post/@item.Ename">@item.Title</a></div>
                            <div class="item-meta">

                                <div class="item-meta-ico bg-ico bg-ico-book"></div>

                                <div class="item-meta-cat"><a href="#">分类</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @HarrisZhang.Controls.PadingControl.Paging(ViewBag.PageIndex, ViewBag.PageCount, 5, "/posts/{0}")
</div>

